{
  "name": "streamer-alerts-xplat",
  "version": "1.0.0",
  "description": "Cross-platform streamer live notifications app",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "cd renderer && tsc",
    "build:prod": "node build-config.js && npm run build",
    "watch": "concurrently \"tsc --watch\" \"cd renderer && tsc --watch\"",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "clean": "rimraf dist renderer/dist",
    "rebuild": "npm run clean && npm run build",
    "pack": "npm run build:prod && electron-builder",
    "pack:win": "npm run build:prod && electron-builder --win",
    "pack:mac": "npm run build:prod && electron-builder --mac",
    "pack:linux": "npm run build:prod && electron-builder --linux",
    "dist": "npm run build:prod && electron-builder --publish=never",
    "test-oauth": "npm run build && node dist/tests/oauth-test-runner.js",
    "test-oauth-twitch": "npm run build && node dist/tests/oauth-test-runner.js twitch",
    "test-oauth-youtube": "npm run build && node dist/tests/oauth-test-runner.js youtube",
    "test-oauth-kick": "npm run build && node dist/tests/oauth-test-runner.js kick",
    "cleanup-data": "node scripts/cleanup-data.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "typescript",
    "twitch",
    "youtube",
    "kick",
    "streamer",
    "notifications"
  ],
  "author": "Patrick Magee",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.streamer-alerts.app",
    "productName": "Streamer Alerts",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer/dist/**/*",
      "renderer/index.html",
      "renderer/styles.css",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
